<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSAMobApp.Views.StockReceivePage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                
                <Entry Placeholder="User ID" IsReadOnly="True" Grid.Row="0" Grid.Column="1" x:Name="txtUserID" Text="{Binding UserID}" />

                <Entry Placeholder="Ngày Quét" IsReadOnly="True" Grid.Row="0" Grid.Column="3" x:Name="txtScanDate" Text="{Binding ScanDate}" />
                    
                <Entry Placeholder="Mã kho" IsReadOnly="True" Grid.Row="1" Grid.Column="1" x:Name="txtWHCode" 
                           Text="{Binding WhCode}" />
                <Entry Placeholder="Mã Kệ" IsReadOnly="True" Grid.Row="1" Grid.Column="3" x:Name="txtShelfCode" 
                           Text="{Binding ShelfCode}" />

                    <Label Grid.Row="2" Grid.Column="0" Text="Số phiếu" FontSize="Medium" />
                <Entry Placeholder="Số phiếu" IsReadOnly="True" Grid.Row="2" Grid.Column="1" x:Name="txtDocNo" 
                           Text="{Binding DocNo, Mode=TwoWay}"  MinimumWidthRequest="50"
                         />

                    
                </Grid>
            <Label Text="BarCode" FontSize="Medium" />
            <Entry x:Name="scanResultText" Text="{Binding BarCode, Mode=TwoWay}"
                   TextChanged="scanResultText_TextChanged"/>

            <Label Text="Name" FontSize="Medium" />
            <Entry x:Name="txtName"  Text="{Binding Name, Mode=TwoWay}" FontSize="Medium" />

            <Label Text="Unit" FontSize="Medium" />
            <Entry x:Name="txtUnit"  Text="{Binding Unit, Mode=TwoWay}" FontSize="Medium"  />


            <StackLayout Orientation="Horizontal">
                <!--<Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>-->
                <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>