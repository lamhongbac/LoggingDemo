@{
    @model MutipleCheckBoxModel

}
<form asp-controller="MultipleCheckBox" asp-action="Index" method="post">


    @foreach (var item in @Model.CheckBoxes)
        {
        <div class="form-check mb-3">
            <input class="form-check-input" 
                type="checkbox"
               name="UniqueName"
                value =@item.Value
                id="checkbox_@item.Value"
                checked=@item.IsBlogActive>

            <label class="form-check-label"
               for=checkbox_@item.Value>
                @item.Description
            </label>
        </div>
        }
    
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Submit </button>
    </div>
</form>