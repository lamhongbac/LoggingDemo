<form action="/uploadmultiple" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <div class="col-md-10">
            <p> Upload files</p>
            <input type="file" id="files" name="files" 
                multiple onchange="fileupload('files');"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="submit" />
        </div>
    </div>
</form>
